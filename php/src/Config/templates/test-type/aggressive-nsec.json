{
  "type": "aggressive-nsec",
  "description": "Test NSEC is acknowledged",
  "config": {
    "dnsZone": {
      "dnsSecConfig": {
        "algorithm": 8
      },
      "records": [
        {
          "prefix": "apples",
          "ttl": 1,
          "type": "A",
          "data": "IPV4_ADDRESS"
        },
        {
          "prefix": "pears",
          "ttl": 1,
          "type": "A",
          "data": "IPV4_ADDRESS"
        }
      ]
    },
    "webVirtualHost": {
      "wildcard": true,
      "content": "OK",
      "sslCertPrefixes": [
        "*"
      ]
    }
  },
  "rules": {
    "dns": {
      "expectedQueries": [
        {
          "type": "A",
          "value": "(?i)^apples\\.[a-z]+\\.[a-z]+",
          "anchor": true
        },
        {
          "type": "A",
          "value": "(?i)^pears\\.[a-z]+\\.[a-z]+",
          "anchor": true
        },
        {
          "type": "A",
          "value": "(?i)^oranges\\.[a-z]+\\.[a-z]+",
          "absent": true
        }
      ]
    },
    "relationalKey": "IPADDRESS",
    "timeoutSeconds": 3
  }
}