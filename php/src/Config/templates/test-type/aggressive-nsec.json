{
  "type": "aggressive-nsec",
  "description": "Test NSEC is acknowledged",
  "config": {
    "dnsZone": {
      "dnsSecConfig": {
        "algorithm": "Alg8"
      },
      "records": [
        {
          "prefix": "apples",
          "ttl": 60,
          "type": "A",
          "data": "IPV4_ADDRESS"
        },
        {
          "prefix": "pears",
          "ttl": 60,
          "type": "A",
          "data": "IPV4_ADDRESS"
        }
      ]
    },
    "webVirtualHost": {
      "wildcard": true,
      "content": "OK",
      "sslCertPrefixes": [
        "*"
      ]
    }
  },
  "rules": {
    "dns": {
      "expectedQueries": [
        {
          "type": "A",
          "value": "(?i)^capability\\.[a-z]+\\.[a-z]+"
        },
        {
          "type": "A",
          "value": "(?i)^resolver\\.capability\\.[a-z]+\\.[a-z]+"
        },
        {
          "type": "A",
          "value": "(?i)^qname\\.resolver\\.capability\\.[a-z]+\\.[a-z]+"
        },
        {
          "type": "A",
          "value": "(?i)^[a-z0-9-]+\\.qname\\.resolver\\.capability\\.[a-z]+\\.[a-z]+"
        }
      ]
    },
    "webserver": {
      "expectedQueries": 1
    },
    "webserverOptional": false,
    "relationalKey": "HOSTNAME_OR_IPADDRESS",
    "timeoutSeconds": 3
  }
}